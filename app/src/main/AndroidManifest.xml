<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camera permission (barcode & capture) -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Declare camera feature, but not required so app can still install on devices without camera -->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:label="ingredients"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ingredients">

        <!-- Home screen -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Camera/Barcode screen -->
        <activity
            android:name=".BarcodeScanActivity"
            android:exported="false" />
        <activity android:name=".CameraActivity" android:exported="false" />
    </application>
</manifest>
